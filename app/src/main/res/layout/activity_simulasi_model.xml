            android:layout_marginTop="5dp"/>

        <EditText
            android:id="@+id/A10_Score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:hint="Score A10 (0 ~ 1)"
